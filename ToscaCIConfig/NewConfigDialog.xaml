<Window x:Class="ToscaCIConfig.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToscaCIConfig"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Window1" Height="160" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Enter new Test Config Name" Margin="10">
            </Label>
            <TextBox Name="tbConfigName" VerticalAlignment="Center" Height="25" Margin="20,0,20,10"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                <Button Name="cancelButton" Content="Cancel" Margin="5" Width="80" Height="25" IsDefault="True"></Button>
                <Button Name="okButton" Content="OK" Margin="5" Width="80" Foreground="White" Background="#1D63AF" IsCancel="True"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
