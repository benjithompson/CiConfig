<Window x:Class="ToscaCIConfig.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToscaCIConfig"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Create New Test Config" Height="200" Width="410">
    <Grid>
        <StackPanel>
            <Label Content="Enter new Test Config Name" Margin="10,10,10,5">
            </Label>
            <TextBox Name="tbConfigName" TextChanged="textChangedEventHandler" VerticalAlignment="Center" Height="25" Margin="20,0,20,5"></TextBox>
            <Label Name="lStatus" Content="" HorizontalAlignment="Right" Margin="20,0,20,5" Foreground="Red"  FontSize="10"></Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,5,15,0">
                <Button Name="cancelButton" Content="Cancel" IsCancel="True" Margin="5" Width="80" Height="25" ></Button>
                <Button Name="okButton" IsDefault="True" Click="okButton_onClick" Content="OK" Margin="5" Width="80" Foreground="White" Background="#1D63AF"></Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
